<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/raleway_light_italic"
        android:text="title"
        android:textColor="@color/colorMainText"
        android:textSize="50px"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/item_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_light_italic"
        android:text="person"
        android:textColor="@color/colorDescriptionText"
        android:textSize="38px" />

    <TextView
        android:id="@+id/item_dateto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_title"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_light_italic"
        android:text="dateTo"
        android:textColor="@color/colorDescriptionText"
        android:textSize="50px"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/item_datefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dateto"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/raleway_light_italic"
        android:text="dateFrom"
        android:textColor="@color/colorDescriptionText"
        android:textSize="38px" />

</RelativeLayout>